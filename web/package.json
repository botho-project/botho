{
  "name": "botho-web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @botho/web-wallet dev",
    "dev:desktop": "pnpm --filter @botho/desktop dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @botho/web-wallet build",
    "build:desktop": "pnpm --filter @botho/desktop build",
    "preview": "pnpm --filter @botho/web-wallet preview",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test --config=e2e/playwright.config.ts",
    "test:e2e:smoke": "playwright test --config=e2e/playwright.config.ts --project=smoke",
    "test:e2e:ui": "playwright test --config=e2e/playwright.config.ts --ui",
    "test:e2e:report": "playwright show-report test-results/report",
    "deploy": "pnpm build:web && wrangler pages deploy packages/web-wallet/dist --project-name=botho",
    "deploy:preview": "pnpm build:web && wrangler pages deploy packages/web-wallet/dist --project-name=botho --branch=preview"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.4.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.16"
  }
}
